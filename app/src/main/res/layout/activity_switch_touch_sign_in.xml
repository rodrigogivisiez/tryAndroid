<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tullyapp.tully.SwitchTouchSignInActivity">

    <RelativeLayout
        android:background="@android:color/white"
        android:padding="16dp"
        android:id="@+id/touch_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/one_touch_sign_in"
            android:textColor="@color/colorLightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/touch_switch"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <TextView
        android:layout_below="@+id/touch_bar"
        android:padding="16dp"
        android:textColor="@color/colorLightText"
        android:text="@string/turn_off_touch_id_anytime_from_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
