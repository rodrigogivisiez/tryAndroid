<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/lyrics_popup_bg"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="193dp">

        <View
            android:background="@drawable/popup_overlay_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="22dp"
            android:layout_height="42dp"></View>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="22dp"
            android:id="@+id/recycle_view"
            tools:listitem="@layout/lyrics_popup_list_item"></android.support.v7.widget.RecyclerView>

        <View
            android:background="@drawable/popup_overlay_bottom"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="13dp"
            android:layout_height="45dp"></View>

        <ProgressBar
            android:id="@+id/popup_progressbar"
            android:layout_centerInParent="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>

</FrameLayout>