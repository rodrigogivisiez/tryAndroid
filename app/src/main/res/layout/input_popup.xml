<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="14dp"
        android:background="@drawable/popupbg"
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/name_your_project"
            android:textSize="20sp"
            android:id="@+id/tv_pop_title"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/you_can_access_this_project_from_the_home_tab"
            android:textColor="@color/colorLightText"
            android:layout_marginTop="12dp"
            android:id="@+id/tv_pop_desc"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "
            android:id="@+id/et_popup_input"
            android:background="@drawable/pop_edittext_bg"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorLightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:background="@android:color/white"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btn_popup_cancel"
                android:text="@string/cancel_capital"
                android:clickable="true"
                android:textSize="16sp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />


            <android.support.v7.widget.AppCompatButton
                android:background="@android:color/white"
                android:textColor="@color/colorAccent"
                android:id="@+id/btn_popup_create"
                android:text="@string/create"
                android:clickable="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/popup_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>