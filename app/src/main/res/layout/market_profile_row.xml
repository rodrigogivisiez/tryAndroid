<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topbar"
    android:background="@color/playerBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/default_profile_picture"
        android:id="@+id/profile_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/default_profile_picture" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/profile_picture"
        android:layout_toEndOf="@id/profile_picture"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/joyner_lucas"
            android:maxLines="1"
            android:id="@+id/tv_projectname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:maxLines="1"
            android:id="@+id/tv_artist_option"
            android:layout_marginTop="6dp"
            android:text="@string/solo_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>