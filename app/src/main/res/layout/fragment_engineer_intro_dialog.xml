<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Engineer.EngineerIntroDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dialogs.ImportDialogFragment">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_top"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="12dp"
                android:background="@drawable/engineer_top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_toLeftOf="@+id/link_icon"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/float_icon_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/link_icon"
                    android:layout_marginEnd="16dp" />
                Ã¥
                <ImageView
                    android:id="@+id/link_icon"
                    android:layout_toLeftOf="@+id/btn_copy"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/link_icon_engineer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btn_copy"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/btn_copy"
                    android:layout_toLeftOf="@+id/action_search"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_copyicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/action_search"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/action_search"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/ic_menu_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <TextView
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:text="@string/invite_engineer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="34dp"
                android:paddingRight="34dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:text="@string/allow_engineers_to_share_mixes_and_master_files_with_you_directly_on_tully"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/ll_top"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/keep_your_files_secure_and_safe_by_no_longer_asking_for_your_audio_files_to_be_shared_via_email"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textSize="18sp"
                android:text="@string/you_can_access_and_manage_all_your_audio_files_by_logging_into_tully_connect_with_your_tully_app_credentials_get_the_login_url_easily_by_selecting"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/link_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/the_link_icon_from_the_navigaton_bar"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_2" />

            <Button
                android:id="@+id/btn_got_it"
                style="@style/WhiteTextLabels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/app_greenbtn"
                android:text="@string/got_it"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

</FrameLayout>